# Environment Configuration
ENVIRONMENT=dev
AWS_REGION=us-west-2
AWS_PROFILE=default

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AWS Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_REGION=us-west-2

# Strands Configuration
STRANDS_API_KEY=your_strands_api_key_here
STRANDS_BASE_URL=https://api.strands.ai

# Local Development
LOCAL_WEBSOCKET_PORT=3001
LOCAL_API_PORT=3000
SAM_LOCAL_START_LAMBDA_TIMEOUT=300

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000

# DynamoDB Local (for development)
DYNAMODB_LOCAL_ENDPOINT=http://localhost:8000
DYNAMODB_LOCAL_REGION=us-west-2

# S3 Local (for development with LocalStack)
S3_LOCAL_ENDPOINT=http://localhost:4566

# WebSocket Testing
WEBSOCKET_TEST_URL=wss://localhost:3001

# Logging
LOG_LEVEL=INFO
ENABLE_XRAY_TRACING=true

# Feature Flags
ENABLE_CONTENT_ANALYSIS=true
ENABLE_SUMMARIZATION=true
ENABLE_EXTRACTION=true
ENABLE_WEBSOCKET_STREAMING=true